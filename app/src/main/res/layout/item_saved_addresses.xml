<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="8dp"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:background="@drawable/bg_list_item_click">

    <!-- Leading type icon (HOME/WORK) -->
    <ImageView
        android:id="@+id/ivType"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:srcCompat="@drawable/home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/ink_700" />

    <!-- Customer / Label (bold) -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nilesh Kumar"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/ink_900"
        app:layout_constraintStart_toEndOf="@id/ivType"
        app:layout_constraintTop_toTopOf="@id/ivType"
        app:layout_constraintEnd_toStartOf="@id/btnMore"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

    <!-- Overflow / more actions -->
    <ImageButton
        android:id="@+id/btnMore"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="More"
        app:srcCompat="@drawable/menu_dots"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/ink_700" />

    <!-- Address lines -->
    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="street, city, state, pincode"
        android:textColor="@color/ink_700"
        android:textSize="14sp"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/ivType"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintEnd_toStartOf="@id/btnMore"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="4dp"/>

    <!-- Phone -->
    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="9931531649"
        android:textColor="@color/ink_900"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvAddress"
        app:layout_constraintTop_toBottomOf="@id/tvAddress"
        app:layout_constraintEnd_toStartOf="@id/btnMore"
        android:layout_marginTop="8dp"/>

    <!-- Optional thin divider to mimic list sections -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/ink_200"
        app:layout_constraintStart_toStartOf="@id/tvAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPhone"
        android:layout_marginTop="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
