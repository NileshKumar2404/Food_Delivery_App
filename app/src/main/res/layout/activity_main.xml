<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen"
    tools:context=".Activity.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:paddingBottom="96dp">

            <!-- Top bar: Username | location pin | avatar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textColor="@color/ink_900"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivLocation"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="5dp"
                    app:srcCompat="@drawable/location"
                    app:tint="@color/brand_600" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_avatar_ring"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_avatar_placeholder" />
            </LinearLayout>

            <!-- Search -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/ink_050"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@android:drawable/ic_menu_search"
                        app:tint="@color/ink_500" />

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Search"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:padding="8dp"
                        android:textColor="@color/ink_900"
                        android:textColorHint="@color/ink_400" />

                    <ImageButton
                        android:id="@+id/btnVoice"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:srcCompat="@android:drawable/ic_btn_speak_now"
                        app:tint="@color/ink_600" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Hero banner -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpHeroBanner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="12dp"/>

            <!-- Dots indicator (static 3 dots for mock) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8dp">

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/dot_filled" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/dot_hollow" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/dot_hollow" />
            </LinearLayout>

            <!-- Section header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your trusted picks"
                    android:textColor="@color/ink_900"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvViewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textColor="@color/brand_600"
                    android:textStyle="bold" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/pbTrusted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"/>

                    <!-- Horizontal cards -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTrusted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingStart="4dp"
                        android:paddingEnd="12dp"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"/>
                </LinearLayout>

            <!-- Recommended -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Recommended"
                            android:textColor="@color/ink_900"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvRecommendedViewAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:textColor="@color/brand_600"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/pbRecommended"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvRecommended"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"/>
                </LinearLayout>

            </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom nav -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_bottom_nav"
        android:elevation="8dp"
        android:gravity="center"
        android:paddingHorizontal="22dp">

        <ImageButton
            android:id="@+id/homeBtn"
            style="@style/BottomItem"
            android:contentDescription="Home"
            app:srcCompat="@drawable/home"/>

        <ImageButton
            android:id="@+id/favouriteBtn"
            style="@style/BottomItem"
            android:contentDescription="Favorites"
            app:srcCompat="@drawable/heart"/>

        <ImageButton
            android:id="@+id/cartBtn"
            style="@style/BottomItem"
            android:contentDescription="Orders"
            app:srcCompat="@drawable/shopping_bag"/>

        <ImageButton
            android:id="@+id/profileBtn"
            style="@style/BottomItem"
            android:contentDescription="Profile"
            app:srcCompat="@drawable/profile"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
