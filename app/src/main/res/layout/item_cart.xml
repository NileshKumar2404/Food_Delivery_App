<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_card"
    android:layout_marginVertical="6dp"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/ivCartImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:clipToOutline="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Food name"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCartFoodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹250"
            android:textColor="@color/brand_600"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <ImageButton
                android:id="@+id/btnCartMinus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_circle_outline"
                android:src="@drawable/ic_minus"
                android:contentDescription="Decrease" />

            <TextView
                android:id="@+id/tvCartQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:text="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/btnCartPlus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_circle_filled"
                android:src="@drawable/ic_add"
                android:contentDescription="Increase"
                app:tint="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/btnCartDelete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/delete"
        android:contentDescription="Delete"/>
</LinearLayout>