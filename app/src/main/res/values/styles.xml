<resources>
    <style name="BottomItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/ink_700</item>
    </style>

    <style name="SummaryRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
    <style name="SummaryLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/ink_600</item>
    </style>
    <style name="SummaryValue">
        <item name="android:textColor">@color/ink_900</item>
    </style>
    <style name="SummaryLabelBold">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ink_900</item>
    </style>
    <style name="SummaryValueBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ink_900</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
