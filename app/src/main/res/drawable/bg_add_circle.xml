<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/brand_200">
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/brand_600"/>
                    <size android:width="34dp" android:height="34dp"/>
                </shape>
            </item>
            <item android:gravity="center">
                <inset android:insetLeft="9dp" android:insetTop="9dp" android:insetRight="9dp" android:insetBottom="9dp">
                    <shape android:shape="oval">
                        <size android:width="16dp" android:height="16dp"/>
                        <solid android:color="@android:color/white"/>
                    </shape>
                </inset>
            </item>
        </layer-list>
    </item>
</ripple>
