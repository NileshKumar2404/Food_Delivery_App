<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/ink_050"/>
            <stroke android:width="2dp" android:color="@color/brand_600"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="1.5dp" android:color="@color/ink_300"/>
        </shape>
    </item>
</selector>
