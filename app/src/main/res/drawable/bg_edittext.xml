<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/ink_050"/> <!-- light background -->
            <stroke android:width="2dp" android:color="@color/brand_600"/>
            <corners android:radius="12dp"/>
            <padding android:left="12dp" android:top="10dp"
                android:right="12dp" android:bottom="10dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/ink_050"/>
            <stroke android:width="1dp" android:color="@color/ink_300"/>
            <corners android:radius="12dp"/>
            <padding android:left="12dp" android:top="10dp"
                android:right="12dp" android:bottom="10dp"/>
        </shape>
    </item>

</selector>
